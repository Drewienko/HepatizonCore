{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux-debug-gcc",
      "displayName": "Linux Debug (GCC + Ninja)",
      "description": "Single-config debug build with GCC",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "HEPC_ENABLE_TESTS": "ON",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_PREFIX_PATH": "$env{QT6_PREFIX}"
      }
    },
    {
      "name": "linux-release-gcc",
      "displayName": "Linux Release (GCC + Ninja)",
      "description": "Single-config release build with GCC",
      "generator": "Ninja",
